{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
     "@/public/*":["public/*"],
     "@/pages/*":["src/pages/*"],
     "@/components/*":["src/components/*"],
     "@/styles/*":["src/styles/*"],
     "@/types/*":["src/types/*"],
     "@/utils/*":["src/components/utils/*"],
     "@/svgs/*":["src/components/svgs/*"],
     "@/module/*":["src/components/module/*"],
     "@/templates/*":["src/components/templates/*"],
     "@/layout/*":["src/components/layout/*"],
     "@/context/*":["src/components/context/*"],
     "react": [ "./node_modules/@types/react" ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
